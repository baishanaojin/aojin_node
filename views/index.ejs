<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%- include head %>
  </head>
  <body>
   <%- include('bar',{username:username}) %><br>
   
   <div>
    <div>
      <span>序号</span>
      <span>作者</span>
      <span>文章标题</span>
      <span>时间</span>
      <span>
        操作
      </span>
    </div>
    <% data.list.map(function(item, index) { %>
      <div>
        <span><%= index + 1 %></span>
        <span><%= item.username%></span>
        <span><%= item.title%></span>
        <span><%= item.time%></span>
        <span>
          <a href="/write?id=<%= item.id%>&page=<%= data.curPage %>">编辑</a>
          <a href="/article/del?id=<%= item.id%>&page=<%= data.curPage %>">删除</a>
        </span>
      </div>
      <% }) %>

      <div>
        <% for(let i = 1; i <= data.total; i++) { %>
        <a href="/?page=<%= i %>"><%= i %></a>
        <% } %>
      </div>
   </div>
  </body>
</html>
